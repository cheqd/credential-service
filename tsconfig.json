{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "@types/jest"
    ]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
