{
	"name": "@cheqd/credential-service-backend",
	"version": "2.0.0-develop.2",
	"description": "cheqd Credential Service Backend",
	"source": "src/index.ts",
	"main": "dist/index.js",
	"license": "Apache-2.0",
	"author": "Cheqd Foundation Limited (https://github.com/cheqd)",
	"repository": "https://github.com/cheqd/credential-service.git",
	"private": "true",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/src/index.js",
			"default": "./dist/src/index.js"
		},
		"./*": {
			"types": "./dist/types/*.d.ts",
			"import": "./dist/src/*.js",
			"default": "./dist/src/*.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"start": "node build/src/index.js",
		"format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
		"lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
		"test": "jest --config jestconfig.json --verbose",
		"typeorm": "typeorm-ts-node-esm  -d ./build/src/database/ormconfig.js",
		"migration": "npm run typeorm migration:generate . && npm run typeorm migration:run"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"typescript",
			"prettier"
		]
	},
	"files": [
		"dist/**/*",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"dependencies": {
		"@cheqd/did-provider-cheqd": "latest",
		"@cosmjs/amino": "^0.30.1",
		"@cosmjs/encoding": "^0.30.1",
		"@veramo/core": "^5.2.0",
		"@veramo/credential-ld": "^5.2.0",
		"@veramo/credential-w3c": "^5.1.2",
		"@veramo/data-store": "^5.2.0",
		"@veramo/did-manager": "^5.1.2",
		"@veramo/did-provider-key": "^5.2.0",
		"@veramo/did-resolver": "^5.2.0",
		"@veramo/key-manager": "^5.1.2",
		"@veramo/kms-local": "^5.1.2",
		"cors": "^2.8.5",
		"did-resolver": "^4.0.1",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-jwt": "^8.4.1",
		"express-validator": "^6.15.0",
		"helmet": "^6.0.1",
		"node-cache": "^5.1.2",
		"pg": "^8.10.0",
		"pg-connection-string": "^2.5.0",
		"secp256k1": "^5.0.0",
		"swagger-ui-express": "^4.6.3",
		"typeorm": "^0.3.15"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.17",
		"@types/helmet": "^4.0.0",
		"@types/secp256k1": "^4.0.3",
		"@types/swagger-ui-express": "^4.1.3",
		"buffer": "6.0.3",
		"ts-node": "^10.9.1",
		"uint8arrays": "^4.0.3"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
