{
    "$schema": "https://resolver.cheqd.net/did:cheqd:namespace:identifier/resources/resourceId",
    "title": "creds Verifiable Credential",
    "description": "Schema of a creds Verifiable Credential ",
    "type": "object",
    "properties": {
        "@context": {
            "description": "Defines semantic context of the Verifiable Credential",
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            }
        },
        "id": {
            "description": "Defines unique identifier of the Verifiable Credential",
            "type": "string",
            "format": "uri"
        },
        "type": {
            "description": "Defines the Verifiable Credential type",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "issuer": {
            "description": "Defines the issuer of the Verifiable Credential",
            "type": "string",
            "format": "uri"
        },
        "issuanceDate": {
            "description": "Defines the date and time, when the Verifiable Credential becomes valid",
            "type": "string",
            "format": "date-time"
        },
        "issued": {
            "description": "Defines when the Verifiable Credential was issued",
            "type": "string",
            "format": "date-time"
        },
        "validFrom": {
            "description": "Defines the date and time, when the Verifiable Credential becomes valid",
            "type": "string",
            "format": "date-time"
        },
        "validUntil": {
            "description": "Defines the date and time, when the Verifiable Credential expires",
            "type": "string",
            "format": "date-time"
        },
        "expirationDate": {
            "description": "Defines the date and time, when the Verifiable Credential expires",
            "type": "string",
            "format": "date-time"
        },
        "credentialSubject": {
            "description": "Defines information about the subject that is described by the Verifiable Credential",
            "type": "object",
            "properties": {
                "id": {
                    "description": "Defines the user subject ID (did:key)",
                    "type": "string"
                },
                "voucherId": {
                    "description": "Defines the internal tracking value for csv issuance / upload",
                    "type": "string"
                },
                "category": {
                    "description": "Defines the type of credential",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "linkedImage"
            ]
        },
        "credentialStatus": {
            "description": "Contains information about how to verify the status of the Verifiable Credential",
            "type": "object",
            "properties": {
                "id": {
                    "description": "References record in the Status List to enable verification of a Verifiable Credentials validity",
                    "type": "string",
                    "format": "uri"
                },
                "type": {
                    "description": "Defines the Verifiable Credential status type",
                    "type": "string"
                },
                "statusPurpose": {
                    "description": "Purpose of the status entry",
                    "type": "string",
                    "enum": [
                        "revocation",
                        "suspension"
                    ]
                },
                "statusListIndex": {
                    "description": "Integer expressed as a string. The zero based index value identifies the bit position of the status",
                    "type": "string"
                },
                "statusListCredential": {
                    "description": "URL referencing the StatusList2021",
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "id",
                "type"
            ]
        },
        "credentialSchema": {
            "description": "Contains information about the credential schema (template)",
            "type": "object",
            "properties": {
                "id": {
                    "description": "References the credential schema (template) stored on the cheqd Ledger",
                    "type": "string",
                    "format": "uri"
                },
                "type": {
                    "description": "Defines credential schema type",
                    "type": "string",
                    "enum": [
                        "FullJsonSchemaValidator2021"
                    ]
                }
            },
            "required": [
                "id",
                "type"
            ]
        },
        "evidence": {
            "description": "Contains information about the process which resulted in the issuance of the Verifiable Credential",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "If present, it MUST contain a URL that points to where more information about this instance of evidence can be found.",
                        "type": "string"
                    },
                    "type": {
                        "description": "Defines the evidence type",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "id",
                    "type"
                ]
            }
        },
        "proof": {
            "description": "Contains information about the proof",
            "type": "object",
            "properties": {
                "type": {
                    "description": "Defines the proof type",
                    "type": "string"
                },
                "jwt": {
                    "description": "Defines the proof value in JWT format",
                    "type": "string"
                }
            },
            "required": [
                "type",
                "jwt"
            ]
        }
    },
    "required": [
        "@context",
        "type",
        "issuer",
        "issuanceDate",
        "credentialSubject",
        "credentialSchema"
    ]
}