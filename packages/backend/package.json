{
	"name": "@cheqd/credential-service-backend",
	"version": "2.0.0-develop.2",
	"description": "cheqd Credential Service Backend",
	"source": "src/index.ts",
	"main": "dist/index.js",
	"license": "Apache-2.0",
	"author": "Cheqd Foundation Limited (https://github.com/cheqd)",
	"repository": "https://github.com/cheqd/credential-service.git",
    "private": "true",
	"scripts": {
		"build": "esbuild src/index.ts --platform=node --bundle --minify --outdir=dist --external:swagger-ui-express --external:pg-native",
		"start": "node dist/index.js",
		"format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
		"lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
		"test": "jest --config jestconfig.json --verbose",
		"typeorm": "typeorm-ts-node-commonjs  -d ./src/database/ormconfig.ts",
        "migration": "npm run typeorm migration:generate . && npm run typeorm migration:run"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"typescript",
			"prettier"
		]
	},
	"files": [
		"dist/**/*",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"dependencies": {
		"@cheqd/did-provider-cheqd": "^3.1.1",
		"@cosmjs/amino": "^0.30.1",
		"@cosmjs/encoding": "^0.30.1",
		"@veramo/core": "4.3.0",
		"@veramo/credential-w3c": "4.3.0",
		"@veramo/data-store": "4.3.0",
		"@veramo/did-manager": "4.3.0",
		"@veramo/did-provider-key": "4.3.0",
		"@veramo/did-resolver": "4.3.0",
		"@veramo/key-manager": "4.3.0",
		"@veramo/kms-local": "4.3.0",
		"cors": "^2.8.5",
		"did-resolver": "^4.0.1",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-jwt": "^8.4.1",
		"express-validator": "^6.15.0",
		"helmet": "^6.0.1",
		"node-cache": "^5.1.2",
		"pg": "^8.10.0",
		"pg-connection-string": "^2.5.0",
		"secp256k1": "^5.0.0",
		"swagger-ui-express": "^4.6.1",
		"typeorm": "^0.3.15"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.17",
		"@types/helmet": "^4.0.0",
		"@types/secp256k1": "^4.0.3",
		"@types/swagger-ui-express": "^4.1.3",
		"buffer": "6.0.3",
		"esbuild": "^0.17.10",
		"util": "^0.12.5"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	}
}
